<div class="display">
<div class="tables">
<center>
  <p id="notice"><%= notice %></p>
  <table border="0">
    <thead>
      <tr>
        <th colspan="3">  <h1>Categories</h1></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td height = "30"><%= category.name%></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: 'tablebutton' %></td>
          <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, class:'tablebutton' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <br>
  <%= link_to 'New Category', new_category_path, class: 'button' %>
  </br>
  </br>
  </br>
    <%= link_to "Back", dashboard_path(session[:admin_id]), class: 'button-back' %>
  </center>

</div>
  </div>
