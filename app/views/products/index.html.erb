<div class="display">
<div class="tables">
<p id="notice"><%= notice %></p>
<table>
  <thead>
    <tr>
      <th colspan="3"><h1>Products</h1></th>
    </tr>
    <tr>
      <th>Item</th>
      <th colspan = "3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name%></td>
        <%if admin_logged_in? %>
        <td><%= link_to 'Edit', edit_product_path(product), class:'tablebutton' %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }, class:'tablebutton' %></td>
        <%end%>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</br>
<center> <%= link_to 'New Product', new_product_path, class:'button'%>
</br></br></br>
<div class="button-back">
      <%= link_to "Back", dashboard_path(session[:admin_id]), class: 'button-back' %></div>
</div>
</div>
