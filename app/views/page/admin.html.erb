<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title></title>
  </head>
  <body>
    <center>
    <!--h1>Admin Page</h1-->
    <br>
<div class = "display">
  <div class="tables">
    <table  class="table">
    <thead >
      <tr>
        <th colspan="3"><h1>List of buyers</h1>
      </tr>
      <tr>
        <th>Email</th>
        <th>Actions</th>
      </tr>
    </thead>
      <tbody>
          <% @buyers.each do |buyer| %>
          <td height = "30">email: <%=buyer.email%></td>
          <td><%= link_to 'Edit', edit_buyer_path(buyer), class: 'tablebutton' %>
            <%= link_to 'Destroy', buyer, method: :delete, data: { confirm: 'Are you sure?' }, class: 'tablebutton' %></td>
      </tbody>
      <% end %>
    </table>
    </div>

</br>
  <div class="tables">
  <table class="table">
  <thead >
    <tr>
      <th colspan="3"><h1>List of sellers</h1></th>
    </tr>
    <tr>
      <th>Email</th>
      <th>Actions</th>
    </tr>
  </thead>
    <tbody>
        <% @sellers.each do |seller| %>
        <td height = "30">email: <%=seller.email%></td>
        <td><%= link_to 'Edit', edit_seller_path(seller), class: 'tablebutton' %>
          <%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' }, class: 'tablebutton' %> </td>
    </tbody>
    <% end %>
  </table>
  </div>

  <div class="tables">
  <table  class="table">
  <thead >
    <tr>
      <th colspan="3"><h1>CRUD</h1>
    </tr>
    <tr>
      <th colspan="3">Actions</th>
    </tr>
    <tr>
      <th height = "30" width = "30"><%= link_to 'Categories', categories_path, class: 'tablebutton' %></th>
      <th><%= link_to 'Products', products_path, class: 'tablebutton'%></th>
      <th><%= link_to 'Sales', sales_path, class: 'tablebutton'%></th>
    </tr>
  </thead>

  </table>
  </div>
</div>
    </center>
  </body>
</html>
